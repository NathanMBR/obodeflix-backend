{
  "include": ["./src", "./test"],
  "exclude": ["./node_modules", "./build"],
  "compilerOptions": {
    "target": "es2020",
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "rootDirs": [
      "./src",
      "./test"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
